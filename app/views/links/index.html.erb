<h2 class="center">Your Links</h3><br>

<h4 class="center">Add New Link</h4>
<div class="container">
  <%= form_for Link.new, url: links_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.submit "Add Link", class: "btn" %>
   <% end %>
</div>

<h4 class="center">Past Links</h4>
<div class= "container" id="search-bar">
  <input class='validate' type="text" id="search-text" placeholder="Search Links">
</div><br>
<div class="container" id="user-links">
  <center><button type="button" name="button" class="btn btn-default" id="filter-read">Show Read</button>
  <button type="button" name="button" class="btn btn-default" id="filter-unread">Show Unread</button></center>
  <table class="centered">
    <thead>
      <tr>
        <th><i class="material-icons" id="sort-item-by-title">swap_vert</i>Title</th>
        <th>Link</th>
        <th>Edit</th>
        <th>Read?</th>
      </tr>
    </thead>
    <tbody id="link-index">
      <% @links.each do |link| %>
      <tr id="link-<%=link.id%>">
        <th class="center link-title"><%= link.title %></th>
        <th class="center"> <a href="<%=link.url%>">Link</a></th>
        <th class="center"> <a href="<%=edit_link_path(link)%>">Edit</a></th>
        <th class="center read-status" id="<%=link.id%>-edit-read"><%= link.read.to_s %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
